# Docker Environment Configuration

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
BOT_USERNAME=your_bot_username_here

BOT_OWNER_ID=your_bot_owner_id_here
BOT_OWNER_NAME=your_bot_owner_name_here

# Telegram Group IDs
ADMIN_GROUP_ID=your_admin_group_id_here
ADMIN_TOPIC_ID=your_admin_topic_id_here

EN_PUBLIC_GROUP_ID=your_en_public_group_id_here
AR_PUBLIC_GROUP_ID=your_ar_public_group_id_here

EN_PUBLIC_GROUP_USERNAME=your_en_group_username_here
AR_PUBLIC_GROUP_USERNAME=your_ar_group_username_here

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Webhook Configuration
WEBHOOK_DOMAIN=your_webhook_domain_here
WEBHOOK_LOGS=true
ENABLE_WEBHOOK=true

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
SECURITY_VERBOSE_LOGGING=false

# GDPR Compliance
GDPR_COMPLIANT_LOGGING=true
IP_HASH_SALT=change-this-salt-in-production-docker

# IP Filtering (comma-separated lists, optional)
IP_WHITELIST=
IP_BLACKLIST=

# Trust Proxy Configuration (for ALB/CloudFlare)
TRUST_PROXY=true

# CORS Configuration
CORS_ORIGINS=

# Telegram Webhook Security (IP-based)
WEBHOOK_IP_FILTERING=true

# Application Port (Docker internal)
PORT=3000